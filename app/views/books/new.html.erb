<div class="books">
  <h1>Books</h1>
  <table>
  　<thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="new-book">
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
   <h4>タイトル</h4>
   <%= f.text_field :title %>

   <h4>本文</h4>
   <%= f.text_area :body %>

   <%= f.submit '投稿' %>
  <% end %>
</div>