<div class="book">
  <h1 class="heading">Books</h1>
  <table>
  　<thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
         <%= link_to 'Show', book_path(book.id) %>
         <%= link_to 'Edit', book_path(book.id) %>
         <%= link_to 'Destroy', book_path(book.id) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
   <h4>Title</h4></h4>
   <%= f.text_field :title %>

   <h4>Body</h4>
   <%= f.text_area :body %>

   <%= f.submit '投稿' %>
  <% end %>
</div>